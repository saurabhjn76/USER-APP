<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    cardview:cardElevation="6dp"
    cardview:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:layout_gravity="center_horizontal"
    android:padding="3dp"
    android:layout_weight="0.5"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        >
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mainlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:foregroundGravity="bottom"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/salon_name"
            android:text="sdssad"
            android:textSize="20sp"
            android:elevation="2dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="100dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/salon_distance_label"
            android:text="Distance:"
            android:elevation="2dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingTextView"
            android:text="7.6/5"
            android:elevation="2dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="270dp"
            android:textSize="20sp"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:isIndicator="true"
            android:elevation="2dp"
            android:stepSize="0.50"
            android:layout_marginTop="40dp"
            android:foregroundGravity="right"
            android:layout_marginLeft="170dp"
            android:rating="5.0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/salon_distance"
            android:text="dsdsadsdsa"
            android:elevation="2dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="70dp"
            />

        <ImageView
            android:layout_width="fill_parent"
            android:id="@+id/salon_photo"
            android:src="@drawable/slider_newton_highlands"
            android:layout_height="200dp"
            android:paddingTop="5dp"
            android:scaleType="centerCrop"
            android:elevation="2dp"
            android:layout_marginTop="70dp"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#80000000"
                android:orientation="vertical" >

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Address:"
                android:textColor="@color/colorBackground"
            android:elevation="2dp"
            android:layout_marginTop="230dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddressTextView"
            android:text="Address:"
            android:textColor="@color/colorBackground"
            android:elevation="2dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="90dp"
            android:textSize="14sp"/>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>